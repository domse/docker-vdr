#!/bin/bash
# -----------------------------------------------------------------------------
# docker-yavdr start script
# written by Jonadalar
# modified by domse
#
# based on: Isaac Bythewood
# -----------------------------------------------------------------------------

# initial start of YAVDR init scripts here!
if [ ! -f /etc/yavdr/postinstall-started ]
then
  /usr/sbin/yavdr-post-install
  touch /etc/yavdr/postinstall-started
fi

# Run vdr
vdr

